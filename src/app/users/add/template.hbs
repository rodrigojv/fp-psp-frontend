<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card animated fadeInLeft">

      <div class="card-block">
        <div class="card-title">
          <h4> Add an User
            <img class="pull-right" src="/static/images/icon_more.png">
          </h4>
        </div>
        <br>
        <div class="" id="img-cam">
          <img id="logo-image" class="card-img-top img-responsive center-block" src="/static/images/icon_camara.png" alt="" />
          <p class="text-center">User</p>
        </div>


        <br>
        <br>
        <div class="fp-form-container" id="add-user">
          <form data-toggle="validator" role="form" class="form-vertical" id="form">

            <div class="form-group">
              <input name="username" type="text" value="{{user.username}}" placeholder="Username" class="form-control" required>
            </div>
            <div class="form-group">
              <input name="email" type="email" value="{{user.email}}" placeholder="Email" class="form-control" required>
            </div>
            <div class="form-group">
              <input name="pass" type="password" value="{{user.pass}}" placeholder="Password" class="form-control" required>
            </div>
            <div class="form-group">
              <input name="password-confirm" type="password" value="" placeholder="Confirm password" class="form-control" required>
            </div>
            <div class="form-group">
              <select id="select-app" name="application" class="form-control" style="display: none;">
                <option id="select-app-placeholder" selected disabled> </option>
              </select>
              <select id="select-org" name="organization" class="form-control" style="display: none;">
                <option id="select-org-placeholder" selected disabled> </option>
              </select>
            </div>
            <div class="form-group">
              <select id="select-role" name="role" class="form-control">
                <option id="select-role-placeholder" selected disabled> </option>
              </select>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-12">
                  <button type="submit" name="register-submit" id="submit" class="btn" value="Save">ADD USER</button>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="text-center">
                <a href="#users" id="cancel" tabindex="5" class="">Cancel</a>
              </div>

            </div>
          </form>

        </div>
      </div>
    </article>
  </div>
</div>
